package com.adenon.sp.kernel.utils.log;

import java.util.Map;

import org.apache.log4j.Level;

public interface ILoggingService {

    Map<String, ILogInfo> getBundleLogInfo();

    void setSystemLogLevel(Level level);

    Level getSystemLogLevel();

    void changeLevelOf(String bundleName,
                       Level level);


}
